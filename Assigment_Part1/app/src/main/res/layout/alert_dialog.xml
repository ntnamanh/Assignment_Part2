<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"  android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="wrap_content" android:background="@color/colorPrimaryDark"
    android:padding="5dp" android:layout_gravity="center"  >


    <ImageView
        android:id="@+id/imageCancelAlert"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_close_black_24dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorwhite"
            android:text="Food Truck Suggestion Alert!!!" />
        <TextView
            android:id="@+id/txtTruckName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorwhite"
            android:text="" />
        <TextView
            android:id="@+id/txtTimeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorwhite"
            android:text="" />
        <TextView
            android:id="@+id/txtWalkingLenght"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorwhite"
            android:text="" />
        <TextView
            android:id="@+id/txtwalkingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorwhite"
            android:text="" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorwhite"
            android:text="Do you want to add to your tracking list?" />




        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="horizontal"
            android:padding="10dp"
            >

            <Button
                android:id="@+id/btnAddAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/colorwhite"
                android:background="@drawable/button_style"
                android:text="Add"
                android:layout_marginRight="10dp"
                />
            <Button
                android:id="@+id/btnDismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/colorwhite"
                android:background="@drawable/button_style"
                android:text="Skip"
                android:layout_marginRight="10dp"
                />


        </LinearLayout>




    </LinearLayout>


</LinearLayout>